{
	"version": "0.1.0",
	"configurations": [
	{
		"name": "ESP32",
		"cwd": "${workspaceFolder:zephyr}",
		"executable": "${workspaceFolder:zephyr}/build/zephyr/zephyr.elf",
		"request": "attach",
		"type": "cortex-debug",
		"servertype": "openocd",
		"interface": "jtag",
		"svdFile": "${config:bsp.svd_path}/esp32.base.svd",
		"serverpath": "${config:bsp.openocd_root}/bin/openocd",
		"toolchainPath": "${userHome}/zephyr-sdk-0.15.0/xtensa-espressif_esp32_zephyr-elf/bin",
		"toolchainPrefix": "xtensa-espressif_esp32_zephyr-elf",
		"configFiles": [
			"${config:bsp.openocd_root}/share/openocd/scripts/board/esp32-wrover-kit-3.3v.cfg"
		],
		"openOCDPreConfigLaunchCommands":[
			"set ESP_RTOS none"
		],
		"runToEntryPoint": "main"
	},
	{
		"name": "ESP32S2",
		"cwd": "${workspaceFolder:zephyr}",
		"executable": "${workspaceFolder:zephyr}/build/zephyr/zephyr.elf",
		"request": "attach",
		"type": "cortex-debug",
		"servertype": "openocd",
		"interface": "jtag",
		"svdFile": "${config:bsp.svd_path}/esp32s2.base.svd",
		"serverpath": "${config:bsp.openocd_root}/bin/openocd",
		"toolchainPath": "${userHome}/zephyr-sdk-0.15.0/xtensa-espressif_esp32s2_zephyr-elf/bin",
		"toolchainPrefix": "xtensa-espressif_esp32s2_zephyr-elf",
		"configFiles": [
			"${config:bsp.openocd_root}/share/openocd/scripts/board/esp32s2-bridge.cfg"
		],
		"openOCDPreConfigLaunchCommands":[
			"set ESP_RTOS none"
		],
		"runToEntryPoint": "main"
	},
	{
		"name": "ESP32C3",
		"cwd": "${workspaceRoot}",
		"executable": "${workspaceFolder:zephyr}/build/zephyr/zephyr.elf",
		"request": "attach",
		"type": "cortex-debug",
		"servertype": "openocd",
		"interface": "jtag",
		"svdFile": "${config:bsp.svd_path}/esp32c3.base.svd",
		"serverpath": "${config:bsp.openocd_root}/bin/openocd",
		"toolchainPath": "${userHome}/zephyr-sdk-0.15.0/riscv64-zephyr-elf/bin/",
		"toolchainPrefix": "riscv64-zephyr-elf",
		"configFiles": [
			"${config:bsp.openocd_root}/share/openocd/scripts/board/esp32c3-builtin.cfg"

		],
		"openOCDPreConfigLaunchCommands":[
			"set ESP_RTOS none"
		],
		"runToEntryPoint": "main",
	}

	]
}
